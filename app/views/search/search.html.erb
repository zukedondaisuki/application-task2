 <div class="container px-5 px-sm-0">
  <div class="row">
   <table class="table table-hover table-inverse">
    <% if @range == "User" %>
      <h2>Users search for"<%= @word %>"</h2>
      <thead>
       <tr>
        <th></th>
        <th>name</th>
        <th>introduction</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
         <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 90, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
         <% end %>
      </tbody>
    <% else %>
      <h2>Books search for"<%= @word %>"</h2>
      <thead>
       <tr>
        <th></th>
        <th>title</th>
        <th>opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
         <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 90, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
         <% end %>
      </tbody>
    <% end %>
   </table>
  </div>
 </div>