<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>Follow Users</h2>
   <% if @user.follower.count == 0 %>
   <table class="table table-hover table-inverse">
       <tr>
         <td>フォローしているユーザーはいません</td>
       </tr>
   </table>
   <% else %>
   <table class="table table-hover table-inverse">
     <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
       </tr>
     </thead>
     <tbody>
     <% @followings.each do |user| %>
       <tr>
         <td><%= attachment_image_tag user, :profile_image, :fill, 90, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
         <td><%= user.name %></td>
         <td><%= "フォロー数: #{user.follower.count}" %></td>
         <td><%= "フォロワー数: #{user.followed.count}" %></td>
         <td><%= link_to "Show", user_path(user.id) %></td>
       </tr>
     <% end %>
   <% end %>
     </tbody>
   </table>
  </div>
</div>